<Window x:Class="discord_like.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:discord_like"
        mc:Ignorable="d"
        Title="MainWindow" Height="720" Width="1280">
    <Grid>
        <!-- Navigation -->
        <Grid x:Name="server_navigation" Margin="0,0,1180,0">
            <Rectangle Fill="#0D1B2A" StrokeThickness="1"/>
        </Grid>

        <!-- Sub Navigation -->
        <Grid x:Name="sub_navigation" Margin="100,0,886,0">
            <Rectangle Fill="#415A77"/>
            <Rectangle Stroke="Black" Margin="0,0,0,630"/>
            <Rectangle Fill="#1B263B" Margin="0,644,0,0"/>
        </Grid>

        <!-- Messages layout -->
        <Grid x:Name="message_layout" Margin="394,0,291,0">
            <Rectangle Fill="#778DA9"/>
            <Rectangle Fill="#778DA9" Stroke="Black" Margin="0,0,-291,630"/>
        </Grid>
        <!-- Information layout -->
        <Grid x:Name="information_layout" Margin="989,74,0,0">
            <Rectangle Fill="#0D1B2A"/>
            <Rectangle Fill="#0D1B2A" Stroke="#778DA9" StrokeThickness="2" Margin="0,557,0,0"></Rectangle>
            <Rectangle Fill="White" Margin="0,0,0,490"/>
        </Grid>
    </Grid>
</Window>
